<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:orientation="horizontal"
              android:clickable="true">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Routes:"
        android:textColor="#000000"
        android:layout_marginTop="60dp"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp"
        android:layout_alignParentTop="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Directions: "
        android:textColor="#000000"
        android:id="@+id/textView2"
        android:layout_below="@+id/spinnerRoutes"
        android:layout_toLeftOf="@+id/spinnerRoutes"
        android:layout_toStartOf="@+id/spinnerRoutes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Stops:"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_below="@+id/spinnerDirections"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"/>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerRoutes"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerDirections"
       android:layout_below="@+id/spinnerRoutes"
        android:layout_alignLeft="@+id/spinnerRoutes"
        android:layout_alignStart="@+id/spinnerRoutes"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerStops"
        android:layout_below="@+id/spinnerDirections"
        android:layout_alignRight="@+id/spinnerDirections"
        android:layout_alignEnd="@+id/spinnerDirections"
        android:layout_alignLeft="@+id/spinnerDirections"
        android:layout_alignStart="@+id/spinnerDirections"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time Remaining:"
        android:id="@+id/textViewTime"
        android:textColor="#000000"
        android:layout_below="@+id/spinnerStops"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize= "32dp"
        android:id="@+id/textViewTimeRemaining"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textViewTime"
        android:layout_toRightOf="@+id/textViewTime"
        android:layout_alignRight="@+id/spinnerStops"
        android:layout_alignEnd="@+id/spinnerStops"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
